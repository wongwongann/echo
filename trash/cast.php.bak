                </div>
                <div class="toast-body">${message}</div>
            `;
            toastContainer.appendChild(toast);

            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();

            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }

        async function submitBroadcast() {
            const submitBtn = document.getElementById('submitForm');
            const spinner = submitBtn.querySelector('.spinner-border');
            const buttonText = submitBtn.querySelector('.button-text');

            // Get values from form
            const mode = document.getElementById('modeInput').value;
            // Get original SKU from data attribute if exists, otherwise use input value
            const rawValue = skuInput.value;
            const object1 = skuInput.getAttribute('data-sku') || rawValue.split(' - ')[0];
            const object2 = document.getElementById('object2Input').value;
            const memo = document.getElementById('memoInput').value;

            // tost
            if (!mode || !object1) {
                showToast('Please fill in all required fields', 'error');
                return;
            }

            try {
                // loading
                submitBtn.disabled = true;
                buttonText.textContent = 'Submitting...';
                spinner.classList.remove('d-none');

                const response = await fetch('include/submit_broadcast.php', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        mode,
                        object1,
                        object2,
                        memo
                    })
                });

                const data = await response.json();

                if (data.success) {
                    showToast('Data saved successfully. Code: ' + data.code);

                    // Reset form
                    document.getElementById('modeInput').value = '';
                    document.getElementById('object1Input').value = '';
                    document.getElementById('object2Input').value = '';
                    document.getElementById('memoInput').value = '';
                    updatePreview();
                } else {
                    throw new Error(data.message || 'Failed to save data');
                }
            } catch (error) {
                showToast(error.message, 'error');
            } finally {
                // Reset button state
                submitBtn.disabled = false;
                buttonText.textContent = 'Submit';
                spinner.classList.add('d-none');
            }
        }

